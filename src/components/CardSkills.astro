---
export interface Props {
    skill : string;
    color : string;
    icon : string;
}
const { skill, color, icon } = Astro.props as Props;
---
<article class="cardSkill" style={`--color: ${color}`}>
    <span>
        <i class={`fa-brands ${icon}`}></i>
    </span>
    <h4>{skill}</h4>
</article>

<style lang="scss">

@mixin cardEffect {
	transition: all 0.6 linear;
	-webkit-transition: all 0.6 linear;
	-moz-transition: all 0.6 linear;
	-ms-transition: all 0.6 linear;
	-o-transition: all 0.6 linear;
	transform: scale(1.05);
	-webkit-transform: scale(1.05);
	-moz-transform: scale(1.05);
	-ms-transform: scale(1.05);
	-o-transform: scale(1.05);
	background-color: #fff;
	color: var(--color);

	svg {
		fill: var(--color);
	}
}

.cardSkill {
        width: 100%;
        height: 200px;
        border: 1px solid rgba(0, 0, 0, 0.253);
        border-radius: 7px;
        -webkit-border-radius: 7px;
        -moz-border-radius: 7px;
        -ms-border-radius: 7px;
        -o-border-radius: 7px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        &:active {
            @include cardEffect;
        }
        span {
            font-size: 4rem;
        }
        h4 {
            font-weight: bold;
        }
    }
@media (min-width: 992px) {
    .cardSkill {
        height: 150px;
        span {
            font-size: 2.5rem;
            svg {
                height: 50px;
                width: 45px;
            }
        }
    }
}

/*  Hover */
@media (hover: hover) {
    .cardSkill:hover {
        @include cardEffect;
    }
}
</style>