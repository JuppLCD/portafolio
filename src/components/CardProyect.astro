---
export interface Props {
    title : string;
    info : string;
    img : string;
};
const {title,info,img} = Astro.props;
const name = title.replace(/\s+/g,'-');
---

<article data-proyect={name}>
<button
    type="button"
    class="cardProyect card bg-dark text-white"
    data-bs-toggle="modal"
    data-bs-target="#proyectInfoModal"
>
    <img src={`img/${img}`} class="card-img" alt={title} />
    <div class="cardProyect-overlay">
        <h4 class="card-title text-center fs-3">{title}</h4>
        <p class="card-text text-center my-2">{info}</p>
    </div>
</button>
</article>

<style lang="scss">
.cardProyect {
    margin: 0 auto;
    width: 100%;
    max-width: 400px;
    height: 300px;
    padding: 0;
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    &-overlay {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        padding: 20px;
        border-radius: 7px;

        background-color: rgba(0, 0, 0, 0.575);
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transform: scale(0.9);
        -webkit-transform: scale(0.9);
        -moz-transform: scale(0.9);
        -ms-transform: scale(0.9);
        -o-transform: scale(0.9);
        a {
            display: block;
            margin: 10px;
        }
    }
}
@media (hover: hover) {
    .cardProyect:hover .cardProyect-overlay {
        display: flex;
        opacity: 1;
        transition: all 0.3s linear;
        -webkit-transition: all 0.3s linear;
        -moz-transition: all 0.3s linear;
        -ms-transition: all 0.3s linear;
        -o-transition: all 0.3s linear;
        transform: scale(1);
        -webkit-transform: scale(1);
        -moz-transform: scale(1);
        -ms-transform: scale(1);
        -o-transform: scale(1);
    }
}
</style>