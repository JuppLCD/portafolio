---
import FiguraCorte from '../FiguraCorte.astro';
import Grid from '../Grid.astro';
import CardProyect from '../CardProyect.astro';
import Title from '../Title.astro';
import Container from '../Container.astro';
import Hero from '../Hero.astro';
import Modal from '../Modal.astro';

import { proyectsData } from './../../data/proyects';
---

<>
	<Hero imgUrl='./img/portafolio.jpg' isFixed={true} positionImg='center'>
		<FiguraCorte position={'top'} />
		<Container className='portafolio py-5' id='portafolio'>
			<Title color='#fff' title=' Te presento algunos de mis proyectos' />
			<Grid>
				{proyectsData.map((proyect) => <CardProyect {...proyect} />)}
			</Grid>
		</Container>
	</Hero>
	<Modal />
</>
